<h1>Sign up</h1>

<% if current_user.admin? %>
  <%= form_for(@newuser) do |f| %>
  
    <%= render 'shared/error_messages', :object => f.object %>

    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </div>
  
    <div class="field">
      <%= f.label :fname %>
      <%= f.text_field :fname %>
    </div>
    
    <div class="field">
      <%= f.label :lname %>
      <%= f.text_field :lname %>
    </div>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.text_field :email %>
    </div>
    <div class="field">
      <%= f.label :startdate %> (YYYY)
      <%= f.text_field :startdate %>
    </div>  
    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password %>
    </div>
    <div class="field">
      <%= f.label :password_confirmation, "Confirmation" %><br />
      <%= f.password_field :password_confirmation %>
    </div>
    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>
  <% end %>
<% else %>
  Only Administrators Can Create A New User...
<% end %>
